<script>


    function timer() {

       



    }




    $(document).ready(function() {

        var redirection;


        // on fixe le temps d'inactivité à 2 s
        time= 2000;

        // lancement du timer
        redirection = setTimeout(function () {
            $('#save').removeClass('inact');
            $('#save').addClass('active');

        }, time);



        // a chque fois que l'on bougera la souris, on remet à zero le timer
        $('html').mousemove(function () {
            clearTimeout(redirection);
        });


        $('input[name="reenter"]').click(function() {


            // on désactive l'écran de veille
            $('#save').removeClass('active');
            $('#save').addClass('inact');


            // et on relance le timer d'inactivité
            redirection = setTimeout(function () {
                $('#save').removeClass('inact');
                $('#save').addClass('active');

            }, time);




        });



        // fin script
    });

</Script>



